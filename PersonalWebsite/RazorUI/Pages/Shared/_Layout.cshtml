<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matthew Hope | .NET Developer - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/images/favicon.png" type="image/png" />
</head>
<body style="background-color: #2f2f2f">
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark box-shadow mb-3" style="background-color: #212676;">
            <a class="navbar-brand ml-1" asp-area="" asp-page="/Index">
                <img src="~/images/favicon.png" alt="Icon" width="32" height="32" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ml-1">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item ml-1">
                        <a class="nav-link" asp-page="/About">About</a>
                    </li>
                    <li class="nav-item ml-1">
                        <a class="nav-link" href="~/pdf/Hope, Matthew - CV, September 2020.pdf" , Matthew - CV.pdf" target="_blank">CV</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item ml-1">
                        <a class="nav-link" href="https://github.com/chickazama" target="_blank">
                            <img src="~/lib/logos/GitHub-Mark-Light-32px.png" alt="GitHub" width="16" height="16" />
                        </a>
                    </li>
                    <li class="nav-item ml-1">
                        <a class="nav-link" href="https://instagram.com/chickazama" target="_blank">
                            <img src="~/lib/logos/instagram-glyph.png" alt="Instagram" width="16" height="16" />
                        </a>
                    </li>
                    <li class="nav-item ml-1">
                        <a class="nav-link" href="https://twitter.com/chickazama" target="_blank">
                            <img src="~/lib/logos/twitter.png" alt="Twitter" width="16" height="16" />
                        </a>
                    </li>
                    <li class="nav-item ml-1">
                        <a class="nav-link" href="https://linkedin.com/in/chickazama" target="_blank">
                            <img src="~/lib/logos/linkedin-bug.png" alt="LinkedIn" width="16" height="16" />
                        </a>
                    </li>
                </ul>

            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-light text-muted">
        <div class="container-fluid pl-3">
            &copy; 2020 - Matthew Hope
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
